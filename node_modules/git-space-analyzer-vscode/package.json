{
  "name": "git-space-analyzer-vscode",
  "displayName": "Git Space Analyzer",
  "description": "Analyze Git repository space usage and identify large files across all branches",
  "version": "1.0.0",
  "publisher": "your-publisher",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Debuggers"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gitSpaceAnalyzer.analyze",
        "title": "Analyze Repository Space",
        "category": "Git Space Analyzer"
      },
      {
        "command": "gitSpaceAnalyzer.showReport",
        "title": "Show Space Report",
        "category": "Git Space Analyzer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "gitSpaceAnalyzer.analyze",
          "when": "explorerResourceIsFolder",
          "group": "navigation",
          "icon": "$(graph)"
        }
      ],
      "scm/title": [
        {
          "command": "gitSpaceAnalyzer.analyze",
          "when": "scmProvider == git",
          "group": "navigation",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "gitSpaceAnalyzer",
          "name": "Git Space Analysis",
          "when": "workspaceHasGitRepo",
          "icon": "$(graph)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitSpaceAnalyzer",
          "title": "Git Space Analyzer",
          "icon": "$(graph)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "tsc -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@vscode/test-electron": "^2.3.0"
  },
  "dependencies": {
    "@git-space-analyzer/core": "^1.0.0"
  }
}
